<%- include("partials/header.ejs") %>
    <div class="blog-container">
      <% if (locals.data) {
        data.forEach((post) => {%>
          <div>
            <h2 class="blog-title"><%=post.title%></h2>
            <p style="font-weight: 100;"><%=post.date%></p>
            <h4 class="mb-3"><%=post.author%></h4>

            <p><%= post.content%></p>
              <a href="/modify/<%=post.id%>" ><button class="btn btn-light rounded-pill px-3" type="button">Edit</button></a>  
              <a href="/delete/<%=post.id%>"><button class="btn btn-danger rounded-pill px-3" type="button">Delete</button></a>
          </div>   
        <%})
      }%>
    
    </div>
<%- include("partials/footer.ejs")%>